    "license": "MIT",
    "devDependencies": {
        "@tada5hi/eslint-config-typescript": "^1.1.9",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.2.5",
        "cross-env": "^7.0.3",
        "eslint": "^8.41.0",
        "jest": "^29.5.0",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    }
